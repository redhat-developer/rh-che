<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-zip</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <componentDescriptors>
        <componentDescriptor>src/assembly/base-component.xml</componentDescriptor>
    </componentDescriptors>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <outputDirectory>tomcat/webapps</outputDirectory>
            <outputFileNameMapping>ROOT.war</outputFileNameMapping>
            <includes>
                <include>com.redhat.che:fabric8-ide-assembly-ide-war</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <outputDirectory>tomcat/webapps</outputDirectory>
            <outputFileNameMapping>dashboard.war</outputFileNameMapping>
            <includes>
                <include>com.redhat.che:fabric8-ide-dashboard-war</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
